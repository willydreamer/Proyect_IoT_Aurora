<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MensajeriaChatActivity">

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_accent"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:padding="2dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/back"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Christian Gonzales"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Chat Messages -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_2"
        android:padding="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Sample messages -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/messageColor1"
                android:padding="8dp"
                android:text="Hello!"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginBottom="4dp"
                android:background="@color/messageColor2"
                android:padding="8dp"
                android:text="How are you?" />

            <!-- Add more TextViews for each message -->
        </LinearLayout>
    </ScrollView>

    <!-- Input area -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/flechaderecha_background">

        <ImageButton
            android:id="@+id/aÃ±adir"
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:background="@drawable/boton_redondeado"
            android:src="@android:drawable/ic_input_add" />
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mensaje"
            android:padding="8dp" />

        <TextView
            android:gravity="center"
            android:layout_width="100dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_accent"
            android:layout_height="wrap_content"
            android:text="Enviar">

        </TextView>

    </LinearLayout>
</LinearLayout>
