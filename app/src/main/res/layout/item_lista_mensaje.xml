<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_2"
    android:layout_height="110dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_2"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageTitulo1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:background="@drawable/profile" />

        <TextView
            android:id="@+id/textTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"


            android:layout_toEndOf="@id/imageTitulo1"
            android:text="Christian Gonzales "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle1"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageTitulo1"
            android:paddingStart="1dp"
            android:paddingTop="3dp"
            android:paddingEnd="12dp"
            android:text="Hola Admin , debo preguntarle algo"
            android:textColor="#4C9891"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/flechaGo"
            android:layout_width="20dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#088CBBB9"
            android:scaleType="fitCenter"
            android:src="@drawable/flechaderecha" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="11:20" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>