<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="111dp"
        android:layout_height="105dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_background_1"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textTituloSitio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Id Sitio"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTipoSitio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTituloSitio2"
            android:gravity="center"
            android:text="Departamento"
            android:textSize="10sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textDistrito2Sitio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTipoSitio2"
            android:gravity="center"
            android:text="Distrito"
            android:textColor="#959595"
            android:textSize="11sp" />

        <Button
            android:id="@+id/buttonElegirSitio"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_below="@id/textDistrito2Sitio"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:backgroundTint="#368380"
            android:padding="0dp"
            android:text="Elegir"
            android:textAlignment="center"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>