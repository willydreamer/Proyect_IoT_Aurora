<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/ingreso_datos2"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageTitulo1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/perfil_icono" />

            <TextView
                android:id="@+id/textTitle1"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/imageTitulo1"
                android:text="Christian Luis Gonzales FernÃ¡ndez"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSubtitle1"
                android:layout_width="150dp"
                android:layout_height="18dp"
                android:layout_below="@id/textTitle1"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/imageTitulo1"
                android:text="DNI:70298682"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSubtitle1"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/imageTitulo1"
                android:background="@drawable/rounded_background"
                android:paddingVertical="3dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Activo"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/flecha1"
                android:layout_width="41dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="300dp"
                android:background="@drawable/boton_redondeado"
                android:onClick="irInfoSupervisor"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_forward_ios_24px" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>