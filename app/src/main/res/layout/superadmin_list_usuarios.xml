                android:layout_margin="15sp"
                android:background="@drawable/boton_redondeado" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_margin="15sp"
                android:background="@drawable/boton_redondeado" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_margin="15sp"
                android:background="@drawable/boton_redondeado" />

            <Button

                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_margin="15sp"
                android:background="@drawable/boton_redondeado" />

        </LinearLayout>
    </ScrollView>

